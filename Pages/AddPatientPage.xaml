<Page x:Class="pract8.Pages.AddPatientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pract8.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="550"
      Title="AddPatient"
      Background="{DynamicResource WindowBackground}"
      >

    <Grid Style="{StaticResource Grid1}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label FontSize="30" FontWeight="Bold">Добавление пациента</Label>
        </StackPanel>

        <StackPanel Grid.Row="1" Style="{StaticResource PanelForm}">
            <StackPanel Style="{StaticResource PanelField}">
                <Label Content="Имя"/>
                <TextBox Text="{Binding CurrentPatient.NameP, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            <StackPanel Style="{StaticResource PanelField}">
                <Label Content="Фамилия"/>
                <TextBox Text="{Binding CurrentPatient.LastNameP, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            <StackPanel Style="{StaticResource PanelField}">
                <Label Content="Отчество"/>
                <TextBox Text="{Binding CurrentPatient.MiddleNameP, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            <StackPanel Style="{StaticResource PanelField}">
                <Label Content="Дата рождения"/>
                <TextBox Text="{Binding CurrentPatient.Birthday, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            <StackPanel Style="{StaticResource PanelField}">
                <Label Content="Телефон"/>
                <TextBox Text="{Binding CurrentPatient.PhoneNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" Style="{StaticResource PanelBottomCenter}" Orientation="Horizontal">
            <Button Style="{StaticResource ButtonAdd}" Click="AddButton_Click"></Button>
            <Button Style="{StaticResource Button1}" Click="BackButton_Click">Назад</Button>
        </StackPanel>
    </Grid>
</Page>
